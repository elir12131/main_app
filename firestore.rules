rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }

    match /settings/global {
      allow get: if request.auth != null;
    }
    
    match /products/{productId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth.token.isSuperUser == true;
    }
    
    match /orders/{orderId} {
      allow list: if request.auth.token.isSuperUser == true;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, delete: if request.auth.uid == resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId && resource.data.status == 'Unsubmitted';
    }

    match /users/{userId} {
      // --- THIS IS THE FIX ---
      // A Super User can list all user documents.
      allow list: if request.auth.token.isSuperUser == true;
      // A regular user can only read or write their own document.
      allow read, write: if request.auth.uid == userId;
    }

    match /subAccounts/{subAccountId} {
      allow read, write: if request.auth.uid == resource.data.parentId;
      allow create: if request.auth.uid == request.resource.data.parentId;
    }
  }
}